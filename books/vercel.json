{
  "version": 2,
  "builds": [
    { "src": "mern_a_to_z_client/**", "use": "@vercel/static" },
    { "src": "mern_a_to_z_server/**", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/client/(.*)", "dest": "mern_a_to_z_client/$1" },
    { "src": "/server/(.*)", "dest": "mern_a_to_z_server/$1" },
    { "src": "/client", "dest": "mern_a_to_z_client/src/App.js" },
    { "src": "/server", "dest": "mern_a_to_z_server/app.js" }
  ]
}
